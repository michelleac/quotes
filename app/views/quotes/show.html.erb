<p id="notice"><%= notice %></p>

<div class="row">
  <div class="span9">
    <%= image_tag(@quote.picture_url, :width => "100%") if @quote.picture.present? %>
    <h3>Comments</h3>
<% @comments.each do |comment| %>
  <div>
    <strong><%= comment.user_name %></strong>
    <br />
    <p><%= comment.body %></p>
    <p><%= link_to 'Delete', comment_path(comment), method: :delete, data: { confirm: 'Are you sure?' } %></p>
  </div>
<% end %>
<%= render 'comments/form' %>
  </div>

  <div class="span3">
    <p><b>Name: </b><%= @quote.title %></p>
    <p><b>Description: </b><%= @quote.content %></p>
    <p>
      <%= link_to 'Edit', edit_quote_path(@quote) %> |
      <%= link_to 'Destroy', @quote, confirm: 'Are you sure?', method: :delete %> |
      <%= link_to 'Back', quotes_path %>
    </p>
  </div>
</div>